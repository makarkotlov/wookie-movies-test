{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2019"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "useDefineForClassFields": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["*"]
    },
  },

  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
  ]
}
